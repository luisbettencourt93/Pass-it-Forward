<script>
const ACCESS_CODE = "founder2026";

document.getElementById('apply-form').addEventListener('submit', function(e) {
  e.preventDefault();
  const name = document.querySelector('input[name="name"]').value;
  const x = document.querySelector('input[name="x_username"]').value;
  const skills = document.querySelector('textarea[name="skills"]').value;
  const motivation = document.querySelector('textarea[name="motivation"]').value;
  document.getElementById('submitted-name').textContent = name;
  document.getElementById('submitted-x').textContent = x;
  document.getElementById('submitted-skills').textContent = skills;
  document.getElementById('submitted-motivation').textContent = motivation;
  document.getElementById('apply-form').style.display = 'none';
  document.getElementById('apply-success').style.display = 'block';
});

let currentUser = null;

function showMemberTabs() {
  currentUser = localStorage.getItem('pf_user');
  const nav = document.getElementById('main-nav');
  nav.innerHTML = `
    <a href="#vision" onclick="switchTab('vision');return false"><i class="fas fa-map-signs"></i> Vision</a>
    <a href="#apply-card">Apply</a>
  `;
  document.getElementById('login-btn').style.display = 'none';
  document.getElementById('user-area').style.display = 'flex';
  document.getElementById('display-name').textContent = currentUser;
  switchTab('vision');
}

function switchTab(tabId) {
  document.querySelectorAll('#main-nav a').forEach(a => a.classList.remove('active'));
  const activeLink = Array.from(document.querySelectorAll('#main-nav a')).find(a => a.getAttribute('href') === '#' + tabId);
  if (activeLink) activeLink.classList.add('active');
  document.querySelectorAll('.member-section').forEach(s => s.style.display = 'none');
  document.getElementById(tabId).style.display = 'block';
}

function handleLogin() {
  const handle = document.getElementById('xhandle').value.trim();
  const code = document.getElementById('accesscode').value.trim();
  if (!handle || code !== ACCESS_CODE) {
    alert("Invalid access code. Only verified founding members have the code.");
    return;
  }
  currentUser = handle.startsWith('@') ? handle : '@' + handle;
  localStorage.setItem('pf_loggedIn', 'true');
  localStorage.setItem('pf_user', currentUser);
  closeModal();
  showMemberTabs();
}

function closeModal() { document.getElementById('login-modal').style.display = 'none'; }
function logout() { localStorage.clear(); location.reload(); }

document.getElementById('login-btn').addEventListener('click', () => document.getElementById('login-modal').style.display = 'flex');
document.getElementById('logout-btn').addEventListener('click', logout);

if (localStorage.getItem('pf_loggedIn') === 'true') {
  showMemberTabs();
}
</script>
