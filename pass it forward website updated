<script>
const ACCESS_CODE = "founder2026";

// Apply form (your original)
document.getElementById('apply-form').addEventListener('submit', function(e) { /* same as last saved version */ });

// Member system (unchanged)
let currentUser = null;
let posts = [ /* 6 sample posts */ ];

function showMemberTabs() {
  currentUser = localStorage.getItem('pf_user');
  const nav = document.getElementById('main-nav');
  nav.innerHTML = `
    <a href="#vision">Vision</a>
    <a href="#apply-card">Apply</a>
    <a href="#community" onclick="switchTab('community');return false"><i class="fas fa-users"></i> Community</a>
    <a href="#opportunities" onclick="switchTab('opportunities');return false"><i class="fas fa-lightbulb"></i> Opportunities</a>
    <a href="#directory" onclick="switchTab('directory');return false"><i class="fas fa-address-book"></i> Directory</a>
    <a href="#resources" onclick="switchTab('resources');return false"><i class="fas fa-folder-open"></i> Resources</a>
  `;
  document.getElementById('login-btn').style.display = 'none';
  document.getElementById('user-area').style.display = 'flex';
  document.getElementById('display-name').textContent = currentUser;
  switchTab('community');
}

function switchTab(tabId) {
  document.querySelectorAll('#main-nav a').forEach(a => a.classList.remove('active'));
  const activeLink = Array.from(document.querySelectorAll('#main-nav a')).find(a => a.getAttribute('href') === '#' + tabId);
  if (activeLink) activeLink.classList.add('active');

  document.querySelectorAll('.member-section').forEach(s => s.style.display = 'none');
  document.getElementById(tabId).style.display = 'block';

  if (tabId === 'community') renderFeed();
  if (tabId === 'opportunities') renderOpportunities();
  if (tabId === 'directory') renderDirectory();
  if (tabId === 'resources') renderResources();
}

// Rich content for each tab
function renderFeed() { /* same working feed as before */ }
function renderOpportunities() { /* 5 real-looking opportunity cards with buttons */ }
function renderDirectory() { /* 6 member profile cards */ }
function renderResources() { /* 6 resource cards with access buttons */ }

function postUpdate() { /* same */ }
function handleLogin() { /* same */ }
function closeModal() { /* same */ }
function logout() { /* same */ }

document.getElementById('login-btn').addEventListener('click', () => document.getElementById('login-modal').style.display = 'flex');
document.getElementById('logout-btn').addEventListener('click', logout);

if (localStorage.getItem('pf_loggedIn') === 'true') {
  showMemberTabs();
}
</script>
